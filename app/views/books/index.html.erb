<div class='flash'><%= flash[:destroyed] %></div>

<h1>Books</h1>

<div class='index'>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan='3'></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
        <%= link_to 'Show', book_path(book.id) %>
        <%= link_to 'Edit', edit_book_path(book.id) %>
        <%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class='new-book'>
  <h2>New book</h2>
