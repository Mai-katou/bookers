<h1>Editing Book</h1>
 <%if @book.errors.any? %>
  <div class ="errorbox">
   <% if @book.errors.count == 1 %>
    <div class="error-count-message"> 1 error prohibited this book from being saved:</div>
   <% else %>
    <div class="error-count-message"> <%= @book.errors.count %> errors prohibited this book from being saved:</div>
   <% end %>
   <ul>
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
   </ul>
  </div>
 <% end %>

<div class='edit'>
 <%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
  <% if @book.errors.any? %>
   <div class='edit-contents'>
    <div class='error-field'>Title</div>
    <div class='error-field-contents'><%= f.text_field :title %></div>
   </div>
   <div class='edit-contents'>
    <div class='error-field'>Body</div>
    <div class='error-area-contents'><%= f.text_area :body %></div>
   </div>
  <% else %>
   <div class='edit-contents'>
    <div calss='book-title'>Title</div>
    <%= f.text_field :title %>
   </div>
   <div class='edit-contents'>
    <div class='book-title'>Body</div>
    <%= f.text_area :body %>
   </div>
  <% end %>
   <div class='edit-contents'>
    <%= f.submit '  Update Book  ' %>
   </div>
 <% end %>

 <div class='book-link'>
  <%= link_to 'Show', book_path(@book.id)%>
  <span>|</span>
  <%= link_to 'Back', "/books" %>
 </div>
</div>